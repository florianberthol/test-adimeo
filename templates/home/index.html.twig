{% extends 'base.html.twig' %}

{% block title %}Accueil - NASA APOD{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <h1 class="display-5 fw-bold text-dark">Bienvenue sur NASA APOD</h1>
            </div>

            {% if app.user %}
                <div class="card shadow-sm border-0 mb-4" role="alert">
                    <div class="card-body text-center p-4">
                        <h2 class="h4 mb-3">Connecté avec succès !</h2>
                        <p class="mb-2"><strong>Email :</strong> {{ app.user.userIdentifier }}</p>
                        <div class="mt-3">
                            <a class="btn btn-danger" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body text-center p-4">
                        <h2 class="h4 mb-3">Authentification requise</h2>
                        <p class="text-muted mb-4">Connectez-vous avec votre compte Google pour accéder à l'application.</p>
                        <a class="btn btn-primary btn-lg d-inline-flex align-items-center gap-2" href="{{ path('connect_google_start') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z" />
                            </svg>
                            Se connecter avec Google
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
