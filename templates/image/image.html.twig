{% extends 'base.html.twig' %}

{% block title %}{{ title }} - NASA APOD{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">{{ title }}</h1>
                    <small class="text-white-50">{{ date | date('d/m/Y') }}</small>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="{{ url }}"
                             alt="{{ title }}"
                             class="img-fluid rounded shadow-sm">
                    </div>

                    <div class="mt-4">
                        <h2 class="h5 text-primary mb-3">Description</h2>
                        <p class="text-muted lh-lg">{{ explanation }}</p>
                    </div>

                    <div class="mt-4">
                        <a class="btn btn-danger" href="{{ path('app_logout') }}">Se d√©connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

